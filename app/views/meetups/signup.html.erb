
<table width=100% height=100%>
<tr>
<td style="text-align: center; vertical-align: middle;">
<img src="logo.jpg"" />
</td>
</tr>
</table>





<div id="user_nav"  data-theme="a"> 
  <% if current_user %>
   
<div data-role="header"  data-theme="a">   
		<h1>Log In</h1>
	</div>     



<%= form_tag sessions_path do  %>
  <p  class="field">
   <b> <%= label_tag :Username %></b>
    <%= text_field_tag :name, current_user.name %>
  </p>
  <p  class="field">
   <b> <%= label_tag :Password %></b>
    <%= password_field_tag :password, current_user.password %>
  </p>
  <br>

  <p class="button"><%= submit_tag "Log in" %></p>
<% end %>



  <% else %>
    <%= link_to "Sign up", sign_up_path,  { :class => "TopButtons"} %> 
    <%= link_to "log in", log_in_path , { :class => "TopButtons"} %>
  <% end %>
</div>
